---
import { SignedOut, SignedIn, UserButton } from "@clerk/astro/components";
import Nav from "./nav/Nav.astro";
import styles from "./header.module.css";

const { title } = Astro.props;
---

<header
    class="flex min-h-9 w-full flex-col items-center justify-center
        bg-drac-selection px-2 py-1"
>
    <main class="flex w-full flex-row items-center justify-between">
        <h1 class="text-2xl">
            <a href="/">my Tyler-Tech notes</a>
        </h1>

        <SignedIn>
            <div class={styles.userButtonContainer}>
                <UserButton />
            </div>
        </SignedIn>
        <SignedOut>
            <a href="/sign-in">Sign in</a>
        </SignedOut>
    </main>
    <Nav title={title} />
</header>
