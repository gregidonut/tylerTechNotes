---
import { SignedOut, SignedIn, UserButton } from "@clerk/astro/components";
import Nav from "@/components/nav/Nav.astro";
import styles from "./header.module.css";

const { title } = Astro.props;
---

<header class={styles.header}>
    <main>
        <h1>
            <a href="/">my Tyler-Tech notes</a>
        </h1>

        <SignedIn>
            <div class={styles.userButtonContainer}>
                <UserButton />
            </div>
        </SignedIn>
        <SignedOut>
            <a href="/sign-in">Sign in</a>
        </SignedOut>
    </main>
    <Nav title={title} />
</header>
