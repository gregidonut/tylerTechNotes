---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/header/Header.astro";
import Main from "@/components/main/Main.astro";

import VersionList from "./_components/react/versionList/VersionList.tsx";

const { id } = Astro.params;
if (!id) {
    Astro.redirect("/tickets");
}
---

<Layout>
    <Header />
    <Main>
        <header class="w-full">
            <h2 class="text-xl">
                Ticket details page with id=<strong>{id}</strong>
            </h2>
        </header>

        <main class="flex-col-center flex-1">
            <VersionList client:idle id={id!} />
        </main>
    </Main>
</Layout>
