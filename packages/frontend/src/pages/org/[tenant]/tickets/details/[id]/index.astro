---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/header/Header.astro";
import Main from "@/components/main/Main.astro";

import DetailsCard from "./_components/react/detailsCard/DetailsCard.tsx";

const { id } = Astro.params;
---

<Layout>
    <Header />
    <Main>
        <header class="w-full">
            <h2 class="text-xl">
                Ticket details page with id=<strong>{id}</strong>
            </h2>
        </header>

        <main class="flex-row-center flex-1">
            <DetailsCard client:only="react" id={id} />
        </main>
    </Main>
</Layout>
